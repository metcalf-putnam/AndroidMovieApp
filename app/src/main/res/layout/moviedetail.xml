<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:fillViewport="true"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">
<LinearLayout

android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<TextView
    android:id="@+id/tv_originalTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="@string/mockup_original_title"
    android:layout_gravity="center_horizontal"
    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_movieDetailPoster"
        android:layout_width="192dp"
        android:layout_height="270dp"
        android:contentDescription="@string/cd_moviePoster"
        app:srcCompat="@mipmap/spirited_away_test"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        />
    <include
        layout="@layout/movie_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_stats"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp" />

</LinearLayout>

    <include
        android:id="@+id/overview_reviews_trailers"
        layout="@layout/movie_overview_and_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
    />


</LinearLayout>
</ScrollView>